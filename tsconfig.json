{
  "compilerOptions": {
    "lib": ["DOM", "ES2020"],
    "target": "ES2020",
    "skipLibCheck": true,
    "useDefineForClassFields": true,
    "declaration": true,
    "declarationDir": "./dist",
    "emitDeclarationOnly": true,

    "module": "ESNext",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "resolveJsonModule": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "stories", ".storybook", "dist"]
}
